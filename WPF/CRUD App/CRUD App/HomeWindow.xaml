<Window x:Class="CRUD_App.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRUD_App"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="HomeHeader" HorizontalAlignment="Center" Height="48" TextWrapping="Wrap" Text="Punjab Computer Management Software" VerticalAlignment="Top" Width="800" FontFamily="Bahnschrift Condensed" FontSize="36" TextAlignment="Center" Background="#FF00FFE2">
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="AddDataButton" Content="Button" HorizontalAlignment="Left" Height="84" Margin="81,123,0,0" VerticalAlignment="Top" Width="75" Background="#FF52FFD3"/>

    </Grid>
</Window>
